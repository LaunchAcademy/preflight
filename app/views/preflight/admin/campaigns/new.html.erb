<div class="row">
  <div class="large-12 columns">
    <h1>Add a new campaign</h1>

    <%= preflight_form_for [:admin, @campaign], html: {novalidate: 'novalidate'} do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :started_at_date %>
      <%= f.input :ended_at_date %>

      <%= f.button :submit %>
    <% end %>
  </div>
</div>
